<%= form_with(model: [@course, assignment] ) do |form| %>
  <% if assignment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
        <% assignment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :course_id, style: "display: block" %>
    <%= form.collection_select :course_id, Course.all, :id, :name, {:include_blank => true},{class:"form-select w-25"} %>
  </div><br>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control w-25"  %>
  </div><br>

  <div >
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control w-50", rows:"3" %>
  </div><br>

  <div>
    <%= form.label :marks, style: "display: block" %>
    <%= form.number_field :marks, class:"form-control w-25" %>
  </div><br>

  <div class="btn-group me-2" role="group" aria-label="Second group">
    <%= form.submit :"Add Assignment", class:"btn btn-outline-primary" %>
<% end %>
